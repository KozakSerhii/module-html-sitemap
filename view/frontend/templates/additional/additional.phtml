<?php
$links = $block->getAllLinksArray();
?>
<div class="sitemap-item-type sitemap-item-section">
    <?php if (count($links)): ?>
        <h2><?= $block->escapeHtml(__($block->getBlockTitle())) ?></h2>
        <br>
        <?php foreach ($links as $link): ?>
            <?php if ($link): ?>
                <a href="<?= $block->escapeUrl($block->getBaseUrl() . $link['url'])?>">
                    <?= $block->escapeHtml($link['title'])?>
                </a>
            <?php endif; ?>
        <?php endforeach; ?>
    <?php endif; ?>
</div>
