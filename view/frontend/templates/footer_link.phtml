<?php
$objectManager = \Magento\Framework\App\ObjectManager::getInstance();
$config = $objectManager->create(\Magefan\HtmlSitemap\Model\Config::class);
$displayInArray = explode(',', $config->displayIn());
$openLinks = ($block->getOpenLinks() == 1) ? '' : 'target="_blank"';
?>
<?php if ($config->isEnabled()): ?>
    <?php if (in_array('2', $displayInArray)): ?>
    <li>
        <a href="<?= $escaper->escapeUrl($block->getHref()) ?>"
           name="footer_htmlsitemap_link" <?= $openLinks ?>>
            <?= $escaper->escapeHtml($block->getLabel()) ?>
        </a>
    </li>
    <?php endif ?>
<?php endif ?>