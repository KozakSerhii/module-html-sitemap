/**
 * @var \Magefan\HtmlSitemap\Block\AbstractBlock $block
 */

$items = $block->getItems();
?>

<?php if (count($items)) { ?>
    <div class="sitemap-item-type sitemap-item-section">
        <?php if ($this->showBlockTitle() && $block->getBlockTitle()) { ?>
            <h2 class="sitemap-title"><?= $block->escapeHtml(__($block->getBlockTitle())) ?></h2>
        <?php } ?>
        <div class="sitemap-item-wrap">
            <?php foreach ($items as $link): ?>
                <a class="sitemap-item" href="<?= $block->escapeUrl($link->getUrl()) ?>" title="<?= $block->escapeHtml($link->getName()) ?>">
                    <?= $block->escapeHtml($link->getName()) ?>
                </a>
            <?php endforeach; ?>
        </div>
        <?php if ($block->showViewMore()): ?>
            <a class="view-more" href="<?= $block->escapeUrl($block->getCurrentTypeHtmlSitemapUrl())?>" >
                <?= $block->escapeHtml(__('View more'))?>
            </a>
        <?php endif; ?>
    </div>
<?php } ?>
